<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        tools:context=".ShowFragment">

        <ImageView
            android:id="@+id/iv_background_show"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:alpha="0.5"
            android:scaleType="centerCrop"
            android:src="@drawable/sample_show"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_show_name"
            style="@style/Theme.TvMazeApp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:autoSizeTextType="uniform"
            android:text="The Office"
            app:layout_constraintBottom_toBottomOf="@id/iv_background_show"
            app:layout_constraintEnd_toEndOf="@id/iv_background_show"
            app:layout_constraintStart_toStartOf="@id/iv_background_show" />

        <LinearLayout
            android:id="@+id/ll_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_background_show">

            <LinearLayout
                android:id="@+id/ll_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    style="@style/Theme.TvMazeApp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="Summary:asd asdasd asd asd asd as dasd asd asd fsdgsfdg fdg fd  g "
                    app:layout_constraintHorizontal_bias="0" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_other_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    style="@style/Theme.TvMazeApp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Days: sdf sdf sdf sdf sdf sd fsd fsd fsd " />

                <TextView
                    style="@style/Theme.TvMazeApp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Genres: sdf sdf sdf sdf sdf sdf sdf sdf sdf " />

            </LinearLayout>


        </LinearLayout>

        <ExpandableListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ll_info" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
